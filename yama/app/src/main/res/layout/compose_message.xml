<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="17dp" android:layout_marginEnd="17dp"
            android:text="Send"/>

    <EditText
            android:id="@+id/message_compose"
            android:layout_width="249dp" android:layout_height="wrap_content"
            android:layout_alignParentStart="true" android:layout_marginStart="23dp"
            android:layout_alignTop="@+id/submit" android:layout_marginTop="0dp"
            android:hint="Enter Message"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:layout_alignParentTop="true" android:layout_marginTop="82dp"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            android:text="Hello" android:id="@+id/user_messages"/>

    <EditText android:layout_width="371dp" android:layout_height="57dp" android:layout_centerHorizontal="true"
              android:layout_alignParentTop="true" android:layout_marginTop="9dp" android:id="@+id/phone_number"
              android:hint="Enter Number"/>

</RelativeLayout>